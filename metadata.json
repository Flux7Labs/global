{
  "Name": "Global",
  "Description": "Global Application to showcase pipeline.",
  "Version": "0.0.1",
  "Template": "public-facing-webapp",
  "Build": {
    "BakeAMI": true
  },
  "Test": {
    "Commands": [
      "#! /bin/bash",
      "STATUS_CODE=`eval \"curl -I http://$APP_ENDPOINT:80/ 2>/dev/null | head -n 1|cut -d ' ' -f2\"`",
      "echo $STATUS_CODE",
      "[ \"$STATUS_CODE\" -eq \"200\" ]"
    ]
  },
  "TemplateVars": {
    "elb_listeners": [
      {
        "lb_port": "80",
        "lb_protocol": "HTTP",
        "instance_port": "80",
        "instance_protocol": "HTTP"
      }
    ],
    "elb_health_check": {
      "target": "HTTP:80/",
      "interval": 30,
      "healthy_threshold": 2,
      "unhealthy_threshold": 2,
      "timeout": 5
    }
  }
}
